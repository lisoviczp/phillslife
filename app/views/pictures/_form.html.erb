<body>

<!-- <div class="background_image">
    <img src="/assets/Nantucket_Pan.JPG" alt="Nantucket" style="width:100%;height:400px;">
</div> -->


<h3> submit a picture or gif </h3>


<div class="pic-container">
  <div class="pic-show-container-test">
    <div class="upload-form">
      <%= form_for(@picture) do |f| %>
        <% if @picture.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

            <ul>
            <% @picture.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="new-picture">
          <div class="field">          
            Type: <%= f.select :vibeType, [['image', 1], ['soundcloud', 2], ['youtube', 3]] %> </br>
          </div>

          <div class="field">
            <%= f.file_field :image, description: 'choose file', label: 'choose file' %>
          </div>

          <div class="field">
            <%= f.text_field :title %> <!-- , placeholder: 'name it' %> -->
          </div>
          
          <div class="field">
            Body: <%= f.text_field :body %></br>
          </div>

          <div class="field">
            URL: <%= f.text_field :url %></br>
          </div>

          <div class="actions">
            <%= f.submit "Submit", data: { confirm: "your file has been submitted for approval" } %>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>


</body>

